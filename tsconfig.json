{
	"compilerOptions": {
		"target": "es5",
		"lib": ["DOM", "ESNext"],
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "node",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"allowJs": true,
		"declaration": true,
		"outDir": "./dist",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		//"noImplicitThis": false,
	},
	"include": ["src"],
	"exclude": ["node_modules", "example", "**/__test__/*"]
}
